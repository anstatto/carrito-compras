generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id          String     @id @default(cuid())
  nombre      String
  descripcion String?
  imagen      String?    // Imagen de la categoría
  slug        String     @unique // URL amigable
  productos   Producto[]
  activa      Boolean    @default(true)
  creadoEl    DateTime   @default(now())
  actualizadoEl DateTime @updatedAt
}

model Producto {
  id            String    @id @default(cuid())
  nombre        String
  descripcion   String
  precio        Float
  imagenes      String[]
  slug          String    @unique // URL amigable
  sku           String    @unique // Código único del producto
  marca         String?
  existencias   Int
  stockMinimo   Int       @default(5) // Alerta cuando el stock baje de este número
  enOferta      Boolean   @default(false)
  precioOferta  Float?
  destacado     Boolean   @default(false)
  categoria     Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId   String
  movimientos   MovimientoInventario[]
  activo        Boolean   @default(true)
  creadoEl      DateTime  @default(now())
  actualizadoEl DateTime  @updatedAt
}

model MovimientoInventario {
  id          String    @id @default(cuid())
  producto    Producto  @relation(fields: [productoId], references: [id])
  productoId  String
  tipo        TipoMovimiento
  cantidad    Int
  nota        String?
  creadoPor   User      @relation(fields: [userId], references: [id])
  userId      String
  creadoEl    DateTime  @default(now())
}

enum TipoMovimiento {
  ENTRADA
  SALIDA
  AJUSTE
  DEVOLUCION
}

model Pedido {
  id              String          @id @default(cuid())
  numero          String          @unique // Número de pedido para el cliente
  cliente         User            @relation(fields: [clienteId], references: [id])
  clienteId       String
  productos       Json[]          // Arreglo de productos comprados
  subtotal        Float
  impuestos       Float
  total           Float
  estado          EstadoPedido    @default(PENDIENTE)
  metodoPago      MetodoPago
  direccionEnvio  DireccionEnvio?
  notas           String?
  creadoEl        DateTime        @default(now())
  actualizadoEl   DateTime        @updatedAt
}

enum EstadoPedido {
  PENDIENTE
  PAGADO
  PREPARANDO
  ENVIADO
  ENTREGADO
  CANCELADO
}

enum MetodoPago {
  TARJETA
  TRANSFERENCIA
  PAYPAL
  EFECTIVO
}

model DireccionEnvio {
  id          String   @id @default(cuid())
  pedido      Pedido   @relation(fields: [pedidoId], references: [id])
  pedidoId    String   @unique
  calle       String
  numero      String
  colonia     String
  ciudad      String
  estado      String
  cp          String
  telefono    String
  referencias String?
}

enum Role {
  USER
  ADMIN
}

model User {
  id          String    @id @default(cuid())
  nombre      String
  apellido    String
  email       String    @unique
  password    String
  role        Role      @default(USER)
  telefono    String?
  pedidos     Pedido[]
  movimientos MovimientoInventario[]
  activo      Boolean   @default(true)
  creadoEl    DateTime  @default(now())
  actualizadoEl DateTime @updatedAt
}
